{
    "extends": "@repo/typescript-config/react-library.json",
    "compilerOptions": {
        "moduleResolution": "node16",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "./dist",
        "jsx": "react-jsx",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
